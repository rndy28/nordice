{
  "name": "@nordice/core",
  "description": "Core React components for nordice design system",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "keywords": [
    "design-system",
    "nord",
    "react"
  ],
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --target es6 --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --target es6 --dts --external react",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-turbo": "latest",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "react": "18.1.0",
    "tsup": "^6.3.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@radix-ui/react-context-menu": "^2.1.1",
    "@radix-ui/react-dropdown-menu": "^2.0.2",
    "@tabler/icons": "^1.103.0",
    "chart.js": "^3.9.1",
    "clsx": "^1.2.1",
    "framer-motion": "^7.0.0",
    "react-chartjs-2": "^4.3.1",
    "react-dom": "18.1.0",
    "tailwind-merge": "^1.9.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
